    display: block;
    margin-top: 10px;
    color: rgb(68, 68, 68);
}

input, textarea {
    width: 100%;
    padding: 10px;
    margin-top: 5px;
    border: 1px solid rgb(200, 200, 200);
    border-radius: 4px;
}

form input[type="submit"]{
     background-color: rgb(51, 51, 51);
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    margin-top: 10px;
    cursor: pointer;
}



